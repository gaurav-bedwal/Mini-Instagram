<!DOCTYPE html>
<html>
<head>
  <title>Edit</title>

  <script src="https://cdn.tailwindcss.com"></script>

  <script>
  tailwind.config = {
    theme: {
      extend: {
        colors: {
          metaBg: "#fafafa",
          metaCard: "#ffffff",
          metaBorder: "#e4e6eb",
          metaText: "#050505",
          metaSub: "#65676b",
          metaBlue: "#1877f2"
        }
      }
    }
  }
  </script>
  
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
  body{font-family:Inter,sans-serif;background:#fafafa}
  </style>

</head>
<body class="bg-gray-50">

  <%- include("partials/nav") %>

  <div class="max-w-2xl mx-auto mt-6">
  
    <div class="bg-white border border-metaBorder rounded-2xl p-4">
  
      <img src="<%= post.image %>" class="rounded-xl mb-4">
  
      <form action="/edit/<%= post._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-4">
  
        <textarea name="caption"
          class="w-full resize-none outline-none text-lg"><%= post.caption %></textarea>
  
        <input type="file" name="image" class="text-sm text-metaSub">
  
        <div class="flex justify-end">
          <button class="bg-metaBlue text-white px-5 py-2 rounded-full text-sm font-medium">
            Update
          </button>
        </div>
  
      </form>
  
    </div>
  
  </div>

</body>
</html>